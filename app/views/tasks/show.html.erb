<h2><%= @task.title %></h2>

<%= link_to "Edit a task", edit_task_path(@task) %>
<br>

<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <%= f.submit %>
<% end %>
<br>

<%= link_to "Back to list", tasks_path %>